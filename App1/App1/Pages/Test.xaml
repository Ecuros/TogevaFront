<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Pages.Test">
    <ContentPage.Content>
        <Grid Padding="10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="image" BackgroundColor="Red"/>
            <Label Grid.Column="1" Grid.ColumnSpan="3" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
            <Label Grid.Column="0" Grid.Row="1"  Text="Location" BackgroundColor="Pink"/>
            <Label Grid.Column="1" Grid.Row="1" Text="Date" BackgroundColor="Green"/>
            <Label Grid.Column="2" Grid.Row="1" Text="Sport" BackgroundColor="Yellow"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>